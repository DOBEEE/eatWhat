/**index.wxss**/
.user-bg {
  
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  padding: 40rpx 0;
  overflow: hidden;
  box-sizing: border-box;
  justify-content: center;
  text-align: center;
  position: relative;
}
.mask {
  background-color: rgba(0,0,0,0.4);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.bg-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.bg-img image {
  width: 100%;
  height: 100%;
}
.pic-wrapper{
  margin-top: 160rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 3px solid #fff;
}
.pic-wrapper image {
  width: 100%;
  height: 100%;
}
.name {
  margin-top: 50rpx;
  font-size: 50rpx;
  font-weight: 700;
}
.name-side {
  margin-top: 10rpx;
  font-size: 30rpx;
  font-weight: 700;
}
.email {
  margin-top: 10rpx;
  font-size: 30rpx;
  font-weight: 500;
}
.tit {
  margin-top: 60rpx;
  font-size: 30rpx;
  font-weight: 700;
}
.desc {
  margin-top: 140rpx;
  font-size: 28rpx;
  font-weight: 400;
  padding: 0 100rpx;
  text-align: left;
  line-height: 1.8;
}