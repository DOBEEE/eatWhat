/**index.wxss**/
.huoguo-bg {
  background-color: red;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  padding: 40rpx 0;
  overflow: hidden;
  box-sizing: border-box;
  justify-content: center;
  text-align: center;
}

@keyframes animated-border {
  0% {
    box-shadow: 0 0 0 0 rgba(255,255,255,0.6);
  }
  100% {
    box-shadow: 0 0 0 20px rgba(255,255,255,0);
  }
}
.vip-btn {
  animation: animated-border 1.5s infinite;
  height: 100rpx;
  font-family: Arial;
  font-size: 18px;
  font-weight: bold;
  color: white;
  border: 2px solid;
  border-radius: 50rpx;
  margin: 100rpx 40rpx;
  line-height: 100rpx;
  text-align: center;  
  background: transparent !important;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}